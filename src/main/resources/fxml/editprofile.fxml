<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.yd.controller.EditProfileController"
          hgap="10" vgap="10" alignment="CENTER"
          styleClass="dark-theme">
    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Birthday:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="저장" onAction="#handleSave" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER"/>
</GridPane>
